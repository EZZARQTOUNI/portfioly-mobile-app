    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.portfioly.Fragments.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_statistic"
        android:name="com.portfioly.Fragments.StatisticFragment"
        android:label="@string/title_statistic"
        tools:layout="@layout/fragment_statistic" />

    <fragment
        android:id="@+id/navigation_mails"
        android:name="com.portfioly.Fragments.MailsFragment"
        android:label="@string/title_mails"
        tools:layout="@layout/fragment_mails" />

    <fragment
        android:id="@+id/navigation_profil"
        android:name="com.portfioly.Fragments.ProfilFragment"
        android:label="@string/title_profil"
        tools:layout="@layout/fragment_profil" />
