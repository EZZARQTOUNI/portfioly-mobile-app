<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/background_secondry"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MailElementActivity">
    <LinearLayout android:layout_width="match_parent" android:gravity="center_vertical" android:paddingTop="15dp" android:paddingBottom="5dp"
        android:layout_height="85dp" android:orientation="horizontal" android:background="@drawable/background_element_type1">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/go_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:backgroundTint="@color/background_secondry"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:shadowColor="@color/background_primary"
            app:cornerRadius="5dp"
            app:icon="@drawable/left__back_icon"
            app:iconGravity="textStart"
            app:iconSize="38dp"
            app:iconPadding="0dp"
            app:iconTint="@color/text_primary" />
        <TextView
            android:textAllCaps="true"
            android:id="@+id/title_page"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Email"
            android:textColor="@color/text_primary"
            android:textSize="20dp"
            android:textStyle="bold"
            android:padding="2dp" />
        <ImageView android:layout_width="40dp" android:layout_height="40dp" android:layout_marginRight="10dp" />
    </LinearLayout>
    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@color/background_secondry"
            android:paddingHorizontal="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:backgroundTint="@color/background_primary"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="15dp" >
                <LinearLayout
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_gravity="end"
                            android:id="@+id/date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:textSize="13dp"
                            android:text="02/09/2022 14:58 PM"
                            android:alpha=".9"
                            android:textColor="@color/text_secondry"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:gravity="center"
                            android:layout_marginTop="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.google.android.material.button.MaterialButton
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="2dp"
                                android:backgroundTint="#e3f2fd"
                                android:insetLeft="0dp"
                                android:insetTop="0dp"
                                android:insetRight="0dp"
                                android:insetBottom="0dp"
                                android:shadowColor="@color/primary"
                                app:cornerRadius="8dp"
                                app:icon="@drawable/ic_baseline_person_24"
                                app:iconGravity="textStart"
                                app:iconPadding="0dp"
                                app:iconSize="38dp"
                                app:iconTint="@color/primary" />
                            <LinearLayout
                                android:layout_marginLeft="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="start|center_vertical"
                                    android:orientation="vertical">
                                    <TextView
                                        android:id="@+id/full_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:text="Omar EZZARQTOUNI"
                                        android:textColor="@color/text_primary"
                                        android:textSize="19dp"
                                        android:layout_weight="1"
                                        android:textStyle="bold" />
                                    <TextView
                                        android:id="@+id/email"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:text="omarezzar@gmail.com"
                                        android:textColor="@color/text_secondry"
                                        android:textSize="17dp"
                                        android:layout_weight="1"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="20dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_marginBottom="5dp"
                                android:id="@+id/subject"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="Contact for a project"
                                android:textColor="@color/primary"
                                android:textSize="22dp"
                                android:layout_weight="1"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/message"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="15dp"
                                android:layout_weight="1"
                                android:text="Hi Omar,  how are you ? I contact you for  a project how are you ? I contact you for  a project how are you ? I contact you for  a project how are you ? I contact you for  a project how are you ? I contact you for  a project how are you ? I contact you for  a project how are you ? I contact you for  a project "
                                android:textColor="@color/text_primary"
                                android:textSize="16dp" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_marginRight="10dp"
                    android:layout_width="75dp"
                    android:layout_height="70dp"
                    app:cardCornerRadius="15dp">
                    <ImageView
                        android:id="@+id/country_image"
                        android:layout_gravity="center"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ma"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="10dp"
                    app:cardCornerRadius="22dp"
                    android:backgroundTint="@color/gry_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/platforme_image"
                        android:padding="15dp"
                        android:layout_width="75dp"
                        android:layout_height="70dp"
                        android:src="@drawable/windows"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="22dp"
                    android:layout_marginVertical="4dp"
                    android:backgroundTint="@color/gry_01"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/browser_image"
                        android:padding="15dp"
                        android:layout_width="75dp"
                        android:layout_height="70dp"
                        android:src="@drawable/chrome"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="22dp"
                    android:backgroundTint="@color/gry_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/text_county_code"
                        android:layout_width="75dp"
                        android:layout_height="70dp"
                        android:text="US"
                        android:textColor="#fff"
                        android:gravity="center"
                        android:textSize="28dp"
                        android:textStyle="bold"
                        />
                    <ImageView
                        android:visibility="gone"
                        android:padding="15dp"
                        android:layout_width="75dp"
                        android:layout_height="70dp"
                        android:src="@drawable/night"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>