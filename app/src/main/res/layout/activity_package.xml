<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_secondry"
    tools:context=".Activity.PackageActivity">
    <LinearLayout android:layout_width="match_parent" android:gravity="center_vertical" android:paddingTop="15dp" android:paddingBottom="5dp"
        android:layout_height="85dp" android:orientation="horizontal" android:background="@drawable/background_element_type1">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/go_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:backgroundTint="@color/background_secondry"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:shadowColor="@color/background_primary"
            app:cornerRadius="5dp"
            app:icon="@drawable/left__back_icon"
            app:iconGravity="textStart"
            app:iconSize="38dp"
            app:iconPadding="0dp"
            app:iconTint="@color/text_primary" />
        <TextView
            android:textAllCaps="true"
            android:id="@+id/title_page"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Portfioly Packages"
            android:textColor="@color/text_primary"
            android:textSize="20dp"
            android:textStyle="bold"
            android:padding="2dp" />
        <ImageView android:layout_width="40dp" android:layout_height="40dp" android:layout_marginRight="10dp" />
    </LinearLayout>
    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:paddingHorizontal="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:backgroundTint="@color/background_primary"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="20dp"
                android:minHeight="65dp">
                <LinearLayout
                    android:padding="5dp"
                    android:gravity="center_vertical"
                    android:minHeight="65dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/done_icon"/>
                    <View
                        android:background="#e0e0e0"
                        android:layout_width="3dp"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginVertical="8dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/storage_element"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textColor="@color/text_primary"
                        android:text="3GB Storage space"
                        android:layout_width="wrap_content"
                        android:textAllCaps="true"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:backgroundTint="@color/background_primary"
                android:layout_marginHorizontal="5dp"
                android:minHeight="65dp">
                <LinearLayout
                    android:padding="5dp"
                    android:gravity="center_vertical"
                    android:minHeight="65dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/done_icon"/>
                    <View
                        android:background="#e0e0e0"
                        android:layout_width="3dp"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginVertical="8dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/language_element"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textColor="@color/text_primary"
                        android:text="6 Number of Languages"
                        android:layout_width="wrap_content"
                        android:textAllCaps="true"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:backgroundTint="@color/background_primary"
                android:layout_marginHorizontal="5dp"
                android:minHeight="65dp">
                <LinearLayout
                    android:padding="5dp"
                    android:gravity="center_vertical"
                    android:minHeight="65dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/done_icon"/>
                    <View
                        android:background="#e0e0e0"
                        android:layout_width="3dp"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginVertical="8dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textColor="@color/text_primary"
                        android:text="SSL Certificate"
                        android:layout_width="wrap_content"
                        android:textAllCaps="true"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:backgroundTint="@color/background_primary"
                android:layout_marginHorizontal="5dp"
                android:minHeight="65dp">
                <LinearLayout
                    android:padding="5dp"
                    android:gravity="center_vertical"
                    android:minHeight="65dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/done_icon"/>
                    <View
                        android:background="#e0e0e0"
                        android:layout_width="3dp"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginVertical="8dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textColor="@color/text_primary"
                        android:text="Professional logo"
                        android:layout_width="wrap_content"
                        android:textAllCaps="true"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:backgroundTint="@color/background_primary"
                android:layout_marginHorizontal="5dp"
                android:minHeight="65dp">
                <LinearLayout
                    android:padding="5dp"
                    android:gravity="center_vertical"
                    android:minHeight="65dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/done_icon"/>
                    <View
                        android:background="#e0e0e0"
                        android:layout_width="3dp"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginVertical="8dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textColor="@color/text_primary"
                        android:text="Professional loader"
                        android:layout_width="wrap_content"
                        android:textAllCaps="true"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:backgroundTint="@color/background_primary"
                android:layout_marginHorizontal="5dp"
                android:minHeight="65dp">
                <LinearLayout
                    android:padding="5dp"
                    android:gravity="center_vertical"
                    android:minHeight="65dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/done_icon"/>
                    <View
                        android:background="#e0e0e0"
                        android:layout_width="3dp"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginVertical="8dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textColor="@color/text_primary"
                        android:text="Simple statistic"
                        android:layout_width="wrap_content"
                        android:textAllCaps="true"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:backgroundTint="@color/background_primary"
                android:layout_marginHorizontal="5dp"
                android:minHeight="65dp">
                <LinearLayout
                    android:padding="5dp"
                    android:gravity="center_vertical"
                    android:minHeight="65dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/premuim_tehems"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/false_icon"/>
                    <View
                        android:background="#e0e0e0"
                        android:layout_width="3dp"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginVertical="8dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textColor="@color/text_primary"
                        android:text="Premium Themes"
                        android:layout_width="wrap_content"
                        android:textAllCaps="true"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:backgroundTint="@color/background_primary"
                android:layout_marginHorizontal="5dp"
                android:minHeight="65dp">
                <LinearLayout
                    android:padding="5dp"
                    android:gravity="center_vertical"
                    android:minHeight="65dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/diamond_theme"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/false_icon"/>
                    <View
                        android:background="#e0e0e0"
                        android:layout_width="3dp"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginVertical="8dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textColor="@color/text_primary"
                        android:text="Diamond Themes"
                        android:layout_width="wrap_content"
                        android:textAllCaps="true"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:backgroundTint="@color/background_primary"
                android:layout_marginHorizontal="5dp"
                android:minHeight="65dp">
                <LinearLayout
                    android:padding="5dp"
                    android:gravity="center_vertical"
                    android:minHeight="65dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/advanced_statics"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/false_icon"/>
                    <View
                        android:background="#e0e0e0"
                        android:layout_width="3dp"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginVertical="8dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textColor="@color/text_primary"
                        android:text="Advanced statistic"
                        android:layout_width="wrap_content"
                        android:textAllCaps="true"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>