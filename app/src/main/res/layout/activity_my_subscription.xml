<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_secondry"
    android:orientation="vertical"
    tools:context=".Activity.MySubscriptionActivity">
    <LinearLayout android:layout_width="match_parent" android:gravity="center_vertical" android:paddingTop="15dp" android:paddingBottom="5dp"
        android:layout_height="85dp" android:orientation="horizontal" android:background="@drawable/background_element_type1">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/go_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:backgroundTint="@color/background_secondry"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:shadowColor="@color/background_primary"
            app:cornerRadius="5dp"
            app:icon="@drawable/left__back_icon"
            app:iconGravity="textStart"
            app:iconSize="38dp"
            app:iconPadding="0dp"
            app:iconTint="@color/text_primary" />
        <TextView
            android:textAllCaps="true"
            android:id="@+id/title_page"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="My Subscription"
            android:textColor="@color/text_primary"
            android:textSize="20dp"
            android:textStyle="bold"
            android:padding="2dp" />
        <ImageView android:layout_width="40dp" android:layout_height="40dp" android:layout_marginRight="10dp" />
    </LinearLayout>
    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:paddingHorizontal="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
           <LinearLayout
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <androidx.cardview.widget.CardView
                   android:layout_margin="15dp"
                   app:cardCornerRadius="10dp"
                   android:background="@drawable/sub1"
                   android:layout_width="match_parent"
                   android:layout_height="220dp">
                   <LinearLayout
                       android:orientation="vertical"
                       android:paddingTop="30dp"
                       android:paddingHorizontal="25dp"
                       android:paddingBottom="10dp"
                       android:background="@drawable/sub2"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent">
                       <LinearLayout
                           android:layout_weight="1"
                           android:gravity="top"
                           android:orientation="horizontal"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content">
                           <com.google.android.material.button.MaterialButton
                               android:layout_width="60dp"
                               android:layout_height="60dp"
                               android:layout_margin="2dp"
                               android:backgroundTint="#FFF"
                               android:insetLeft="0dp"
                               android:insetTop="0dp"
                               android:insetRight="0dp"
                               android:insetBottom="0dp"
                               android:shadowColor="@color/background_secondry"
                               app:cornerRadius="12dp"
                               app:icon="@drawable/ic_baseline_diamond_24"
                               app:iconGravity="textStart"
                               app:iconPadding="0dp"
                               app:iconSize="40dp"
                               app:iconTint="@color/primary300" />
                           <LinearLayout
                               android:layout_marginLeft="10dp"
                               android:orientation="vertical"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content">
                               <TextView
                                   android:id="@+id/package_title"
                                   android:text="PLATINUM PACKAGE"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:textSize="22dp"
                                   android:textColor="#fff"
                                   android:textStyle="bold"/>
                               <LinearLayout
                                   android:orientation="horizontal"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content">
                                   <TextView
                                       android:id="@+id/package_price"
                                       android:text="$57.86"
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:textSize="20dp"
                                       android:textColor="#fff"
                                       android:textStyle="bold"/>
                                   <TextView
                                       android:text=" / YEAR"
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:textSize="14dp"
                                       android:textColor="#fff"
                                       android:textStyle="bold"/>
                               </LinearLayout>
                           </LinearLayout>
                       </LinearLayout>
                       <com.google.android.material.button.MaterialButton
                           android:id="@+id/show_advantage"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:backgroundTint="#fff"
                           android:text="advantages"
                           android:paddingVertical="13dp"
                           android:textSize="16dp"
                           android:paddingHorizontal="9dp"
                           android:textStyle="bold"
                           android:layout_marginBottom="10dp"
                           android:layout_gravity="right"
                           android:textColor="#0d6efd"/>
                   </LinearLayout>
               </androidx.cardview.widget.CardView>
               <LinearLayout
                   android:orientation="vertical"
                   android:gravity="center"
                   android:layout_marginHorizontal="13dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <androidx.cardview.widget.CardView
                       android:layout_width="60dp"
                       android:layout_gravity="left"
                       android:layout_marginLeft="20dp"
                       android:layout_marginBottom="-35dp"
                       android:backgroundTint="#f44336"
                       android:layout_height="60dp"
                       app:cardCornerRadius="50dp">
                       <ImageView
                           android:padding="8dp"
                           android:layout_width="60dp"
                           android:layout_height="60dp"
                           android:src="@drawable/ic_baseline_warning_24"/>
                   </androidx.cardview.widget.CardView>
                   <LinearLayout
                       android:background="@drawable/background_element_type4"
                       android:layout_width="match_parent"
                       android:paddingTop="50dp"
                       android:orientation="vertical"
                       android:paddingHorizontal="15dp"
                       android:layout_height="wrap_content">
                       <TextView

                           android:id="@+id/text_title"
                           android:layout_marginLeft="15dp"
                           android:textStyle="bold"
                           android:textColor="@color/text_primary"
                           android:textSize="22dp"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="You Sould Renew"/>
                       <TextView
                           android:id="@+id/text_descript"
                           android:layout_marginLeft="15dp"
                           android:textColor="@color/text_secondry"
                           android:alpha="0.8"
                           android:layout_marginTop="10dp"
                           android:textSize="18dp"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_marginBottom="25dp"
                           android:text="You Should renew before 11-10-2023, if you didn't pay your subscription you will lose all service and also your portfolio website."/>
                   </LinearLayout>
               </LinearLayout>
               <com.google.android.material.button.MaterialButton
                   android:id="@+id/show_all"
                   android:layout_width="match_parent"
                   android:layout_marginTop="20dp"
                   android:layout_marginHorizontal="15dp"
                   android:layout_marginBottom="15dp"
                   app:cornerRadius="8dp"
                   android:textSize="20dp"
                   android:textStyle="bold"
                   android:text="Show all Packages"
                   android:textColor="@color/text_primary"
                   android:backgroundTint="@color/background_primary"
                   android:layout_height="70dp"/>
           </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
