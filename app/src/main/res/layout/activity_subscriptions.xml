<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_secondry"
    tools:context=".Activity.EditPasswordActivity">
    <LinearLayout android:layout_width="match_parent" android:gravity="center_vertical" android:paddingTop="15dp" android:paddingBottom="5dp"
        android:layout_height="85dp" android:orientation="horizontal" android:background="@drawable/background_element_type1">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/go_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:backgroundTint="@color/background_secondry"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:shadowColor="@color/background_primary"
            app:cornerRadius="5dp"
            app:icon="@drawable/left__back_icon"
            app:iconGravity="textStart"
            app:iconSize="38dp"
            app:iconPadding="0dp"
            app:iconTint="@color/text_primary" />
        <TextView
            android:textAllCaps="true"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Portfioly Packages"
            android:textColor="@color/text_primary"
            android:textSize="20dp"
            android:textStyle="bold"
            android:padding="2dp" />
        <ImageView android:layout_width="40dp" android:layout_height="40dp" android:layout_marginRight="10dp" />
    </LinearLayout>
    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
            android:layout_margin="15dp"
            app:cardCornerRadius="8dp"
            android:background="@drawable/sub1"
            android:layout_width="match_parent"
            android:layout_height="220dp">
            <LinearLayout
                android:orientation="vertical"
                android:paddingTop="30dp"
                android:paddingHorizontal="25dp"
                android:paddingBottom="10dp"
                android:background="@drawable/sub1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="STARTER PACKAGE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="23dp"
                    android:textColor="#fff"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_marginVertical="15dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="$35.98"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textColor="#fff"
                        android:textStyle="bold"/>
                    <TextView
                        android:text=" / YEAR"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:textColor="#fff"
                        android:textStyle="bold"/>
                </LinearLayout>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/starter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#fff"
                    android:text="adventages"
                    android:paddingVertical="13dp"
                    android:textSize="16dp"
                    android:paddingHorizontal="9dp"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="bottom|right"
                    android:textColor="#ff8902"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_margin="15dp"
                app:cardCornerRadius="8dp"
                android:background="@drawable/sub1"
                android:layout_width="match_parent"
                android:layout_height="220dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:paddingTop="30dp"
                    android:paddingHorizontal="25dp"
                    android:paddingBottom="10dp"
                    android:background="@drawable/sub2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="PLATINUM PACKAGE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="23dp"
                        android:textColor="#fff"
                        android:textStyle="bold"/>
                    <LinearLayout
                        android:layout_marginVertical="15dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="$57.86"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20dp"
                            android:textColor="#fff"
                            android:textStyle="bold"/>
                        <TextView
                            android:text=" / YEAR"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:textColor="#fff"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/platinuim"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#fff"
                        android:text="adventages"
                        android:paddingVertical="13dp"
                        android:textSize="16dp"
                        android:paddingHorizontal="9dp"
                        android:textStyle="bold"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="bottom|right"
                        android:textColor="#0d6efd"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_margin="15dp"
                app:cardCornerRadius="8dp"
                android:background="@drawable/sub1"
                android:layout_width="match_parent"
                android:layout_height="220dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:paddingTop="30dp"
                    android:paddingHorizontal="25dp"
                    android:paddingBottom="10dp"
                    android:background="@drawable/sub3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="DIAMOND PACKAGE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="23dp"
                        android:textColor="#fff"
                        android:textStyle="bold"/>
                    <LinearLayout
                        android:layout_marginVertical="15dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="$89.58"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20dp"
                            android:textColor="#fff"
                            android:textStyle="bold"/>
                        <TextView
                            android:text=" / YEAR"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:textColor="#fff"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/diamond"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#fff"
                        android:text="adventages"
                        android:paddingVertical="13dp"
                        android:textSize="16dp"
                        android:paddingHorizontal="9dp"
                        android:textStyle="bold"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="bottom|right"
                        android:textColor="#009688"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>