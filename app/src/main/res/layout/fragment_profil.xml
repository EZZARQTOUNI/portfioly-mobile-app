<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/background_secondry"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout android:layout_width="match_parent" android:gravity="center_vertical" android:paddingTop="15dp" android:paddingBottom="5dp"
        android:layout_height="85dp" android:orientation="horizontal"
        android:background="@drawable/background_element_type1">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/preview_button"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:backgroundTint="@color/background_secondry"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:shadowColor="@color/background_primary"
            app:cornerRadius="5dp"
            app:icon="@drawable/icon_header_public"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconTint="@color/text_primary" />
        <TextView
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="@string/title_profil"
            android:textColor="@color/text_primary"
            android:textSize="20dp"
            android:textStyle="bold"
            android:padding="2dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/groupe_button"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            android:backgroundTint="@color/background_secondry"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:shadowColor="@color/background_primary"
            app:cornerRadius="5dp"
            app:icon="@drawable/header_icon_group_chat"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconTint="@color/text_primary" />
    </LinearLayout>
    <ScrollView   android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:backgroundTint="@color/primary"
                    app:cardCornerRadius="10dp">
                    <LinearLayout
                        android:background="@drawable/bacround_type_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="15dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <com.google.android.material.button.MaterialButton
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="2dp"
                                android:backgroundTint="#fff"
                                android:insetLeft="0dp"
                                android:insetTop="0dp"
                                android:insetRight="0dp"
                                android:insetBottom="0dp"
                                android:shadowColor="@color/background_secondry"
                                app:cornerRadius="12dp"
                                app:icon="@drawable/ic_baseline_person_24"
                                app:iconGravity="textStart"
                                app:iconPadding="0dp"
                                app:iconSize="35dp"
                                app:iconTint="@color/primary300" />
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:id="@+id/full_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_weight="1"
                                        android:text=""
                                        android:textAllCaps="true"
                                        android:textColor="#FFFFFF"
                                        android:textSize="22dp"
                                        android:textStyle="bold" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/username"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_weight="1"
                                        android:text=""
                                        android:textAllCaps="false"
                                        android:textColor="#FFFFFF"
                                        android:textSize="17dp"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|end"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:alpha=".9"
                                android:paddingVertical="5dp"
                                android:text="To modify your profile please click on the button below. You can change your email, first and last name and phone number, but you can't change your username. You cannot change your theme or customize your website in the mobile app, but you can do it in our website"
                                android:textColor="#FFFFFF"
                                android:textSize="15dp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/edit_profile"
                            android:layout_width="55dp"
                            android:layout_height="40dp"
                            android:layout_gravity="end"
                            android:backgroundTint="#fff"
                            android:insetLeft="0dp"
                            android:insetTop="0dp"
                            android:insetRight="0dp"
                            android:insetBottom="0dp"
                            android:shadowColor="@color/black"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            app:cornerRadius="12dp"
                            app:icon="@drawable/ic_baseline_mode_edit_24"
                            app:iconGravity="textStart"
                            app:iconPadding="0dp"
                            app:iconTint="@color/black" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:backgroundTint="@color/background_primary"
                    android:id="@+id/subscribtion"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    app:cardCornerRadius="5dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="end|bottom"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/pprofil_subscription_01"/>
                    <LinearLayout
                        android:paddingLeft="15dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="95dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Subscription"
                                android:textColor="@color/text_primary"
                                android:textSize="18dp"
                                android:textStyle="bold"/>
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_baseline_keyboard_arrow_right_24"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Check your advantages"
                            android:textSize="13dp"
                            android:textColor="@color/text_secondry"
                            android:textStyle="bold"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:backgroundTint="@color/background_primary"
                    android:id="@+id/storage"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="5dp"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="end|bottom"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/pprofil_storage_01"/>
                    <LinearLayout
                        android:paddingLeft="15dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="95dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Storage"
                                android:textColor="@color/text_primary"
                                android:textSize="18dp"
                                android:textStyle="bold"/>
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Check your Storage"
                            android:textColor="@color/text_secondry"
                            android:textSize="13dp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    app:cardCornerRadius="5dp" >
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:background="@color/background_primary"
                            android:id="@+id/my_portfolio"
                            android:clickable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_marginVertical="15dp"
                                android:layout_marginHorizontal="10dp"
                                android:layout_width="32dp"
                                android:layout_height="28dp"
                                android:src="@drawable/nav_profile_my_portfolio"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="My Portfolio"
                                android:textColor="@color/text_primary"
                                android:textSize="20dp"
                                android:layout_weight="1"/>
                            <ImageView
                                android:alpha=".8"
                                android:layout_width="40dp" android:layout_marginHorizontal="5dp"
                                android:layout_height="35dp"
                                android:src="@drawable/ic_baseline_keyboard_arrow_right_24"/>
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    app:cardCornerRadius="5dp" >
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:background="@color/background_primary"
                            android:id="@+id/update_pr"
                            android:clickable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_marginVertical="15dp"
                                android:layout_marginHorizontal="10dp"
                                android:layout_width="32dp"
                                android:layout_height="28dp"
                                android:src="@drawable/nav_profile_setting"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Settings"
                                android:textColor="@color/text_primary"
                                android:textSize="20dp"
                                android:layout_weight="1"/>
                            <ImageView
                                android:alpha=".8"
                                android:layout_width="40dp" android:layout_marginHorizontal="5dp"
                                android:layout_height="35dp"
                                android:src="@drawable/ic_baseline_keyboard_arrow_right_24"/>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:alpha=".8"
                            android:layout_marginHorizontal="15dp"
                            android:background="@color/background_secondry"/>
                        <LinearLayout
                            android:background="@color/background_primary"
                            android:id="@+id/change_password"
                            android:clickable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_marginVertical="15dp"
                                android:layout_marginHorizontal="10dp"
                                android:layout_width="32dp"
                                android:layout_height="28dp"
                                android:src="@drawable/nav_profile_change_password"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Change Password"
                                android:textColor="@color/text_primary"
                                android:textSize="20dp"
                                android:layout_weight="1"/>
                            <ImageView
                                android:layout_width="40dp" android:layout_marginHorizontal="5dp"
                                android:layout_height="35dp"
                                android:src="@drawable/ic_baseline_keyboard_arrow_right_24"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    app:cardCornerRadius="5dp" >
                   <LinearLayout
                       android:background="@color/background_primary"
                       android:orientation="vertical"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">
                       <LinearLayout
                           android:background="@color/background_primary"
                           android:id="@+id/online_services"
                           android:clickable="true"
                           android:foreground="?attr/selectableItemBackgroundBorderless"
                           android:gravity="center"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal">
                           <ImageView
                               android:layout_marginVertical="15dp"
                               android:layout_marginHorizontal="10dp"
                               android:layout_width="32dp"
                               android:layout_height="28dp"
                               android:src="@drawable/nav_profile_online_service"
                               />
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="Online Service"
                               android:textColor="@color/text_primary"
                               android:textSize="20dp"
                               android:layout_weight="1"/>
                           <ImageView
                               android:alpha=".8"
                               android:layout_width="40dp" android:layout_marginHorizontal="5dp"
                               android:layout_height="35dp"
                               android:src="@drawable/ic_baseline_keyboard_arrow_right_24"/>
                       </LinearLayout>
                       <View
                           android:layout_width="match_parent"
                           android:layout_height="1dp"
                           android:alpha=".8"
                           android:layout_marginHorizontal="15dp"
                           android:background="@color/background_secondry"/>
                       <LinearLayout
                           android:id="@+id/send_feedback"
                           android:clickable="true"
                           android:foreground="?attr/selectableItemBackgroundBorderless"
                           android:gravity="center"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal">
                           <ImageView
                               android:layout_marginVertical="15dp"
                               android:layout_marginHorizontal="10dp"
                               android:layout_width="32dp"
                               android:layout_height="28dp"
                               android:src="@drawable/nav_profile_send_feedback"
                               />
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="Send Feedback"
                               android:textColor="@color/text_primary"
                               android:textSize="20dp"
                               android:layout_weight="1"/>
                           <ImageView
                               android:layout_width="40dp" android:layout_marginHorizontal="5dp"
                               android:layout_height="35dp"
                               android:src="@drawable/ic_baseline_keyboard_arrow_right_24"/>
                       </LinearLayout>
                       <View
                           android:layout_width="match_parent"
                           android:layout_height="1dp"
                           android:alpha=".8"
                           android:layout_marginHorizontal="15dp"
                           android:background="@color/background_secondry"/>
                       <LinearLayout
                           android:id="@+id/subscribe"
                           android:clickable="true"
                           android:foreground="?attr/selectableItemBackgroundBorderless"
                           android:gravity="center"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal">
                           <ImageView
                               android:layout_marginVertical="15dp"
                               android:layout_marginHorizontal="10dp"
                               android:layout_width="32dp"
                               android:layout_height="28dp"
                               android:src="@drawable/nav_profile_subscribe"
                               />
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="Subscribe"
                               android:textColor="@color/text_primary"
                               android:textSize="20dp"
                               android:layout_weight="1"/>
                           <ImageView
                               android:layout_width="40dp" android:layout_marginHorizontal="5dp"
                               android:layout_height="35dp"
                               android:src="@drawable/ic_baseline_keyboard_arrow_right_24"/>
                       </LinearLayout>
                       <View
                           android:layout_width="match_parent"
                           android:layout_height="1dp"
                           android:alpha=".8"
                           android:layout_marginHorizontal="15dp"
                           android:background="@color/background_secondry"/>
                       <LinearLayout
                           android:id="@+id/about"
                           android:clickable="true"
                           android:foreground="?attr/selectableItemBackgroundBorderless"
                           android:gravity="center"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal">
                           <ImageView
                               android:layout_marginVertical="15dp"
                               android:layout_marginHorizontal="10dp"
                               android:layout_width="32dp"
                               android:layout_height="28dp"
                               android:src="@drawable/nav_profile_about"
                               />
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="About"
                               android:textColor="@color/text_primary"
                               android:textSize="20dp"
                               android:layout_weight="1"/>
                           <ImageView
                               android:layout_width="40dp" android:layout_marginHorizontal="5dp"
                               android:layout_height="35dp"
                               android:src="@drawable/ic_baseline_keyboard_arrow_right_24"/>
                       </LinearLayout>
                   </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="15dp"
                    app:cardCornerRadius="5dp" >
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:background="@color/background_primary"
                            android:id="@+id/logout"
                            android:clickable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_marginVertical="15dp"
                                android:layout_marginHorizontal="10dp"
                                android:layout_width="32dp"
                                android:layout_height="28dp"
                                android:src="@drawable/nav_log_out"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sign out"
                                android:textColor="@color/text_primary"
                                android:textSize="20dp"
                                android:layout_weight="1"/>
                            <ImageView
                                android:alpha=".8"
                                android:layout_width="40dp" android:layout_marginHorizontal="5dp"
                                android:layout_height="35dp"
                                android:src="@drawable/ic_baseline_keyboard_arrow_right_24"/>
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>