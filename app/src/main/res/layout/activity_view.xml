<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_secondry"
    tools:context=".Activity.ViewActivity">
    <LinearLayout android:layout_width="match_parent"
        android:gravity="center_vertical" android:paddingTop="15dp" android:paddingBottom="5dp"
        android:layout_height="85dp" android:orientation="horizontal" android:background="@drawable/background_element_type1">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/go_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:backgroundTint="@color/background_secondry"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:shadowColor="@color/background_primary"
            app:cornerRadius="5dp"
            app:icon="@drawable/left__back_icon"
            app:iconGravity="textStart"
            app:iconSize="38dp"
            app:iconPadding="0dp"
            app:iconTint="@color/text_primary" />
        <TextView
            android:textAllCaps="true"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Visit Details"
            android:textColor="@color/text_primary"
            android:textSize="20dp"
            android:textStyle="bold"
            android:padding="2dp" />
        <ImageView android:layout_width="40dp" android:layout_height="40dp" android:layout_marginRight="10dp" />
    </LinearLayout>
    <ScrollView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="250dp">
                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:layout_width="400dp"
                    android:layout_height="250dp"
                    app:cardCornerRadius="15dp">
                    <ImageView
                        android:id="@+id/country_image"
                        android:layout_gravity="center"
                        android:layout_width="280dp"
                        android:layout_height="280dp"
                        android:src="@drawable/ma"/>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="22dp"
                        android:backgroundTint="@color/gry_01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/platforme_image"
                            android:padding="15dp"
                            android:layout_width="75dp"
                            android:layout_height="70dp"
                            android:src="@drawable/windows"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_weight="1"
                        app:cardCornerRadius="22dp"
                        android:layout_marginVertical="4dp"
                        android:backgroundTint="@color/gry_01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/browser_image"
                            android:padding="15dp"
                            android:layout_width="75dp"
                            android:layout_height="70dp"
                            android:src="@drawable/chrome"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="22dp"
                        android:backgroundTint="@color/gry_01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/text_county_code"
                            android:layout_width="75dp"
                            android:layout_height="70dp"
                            android:text="US"
                            android:textColor="#fff"
                            android:gravity="center"
                            android:textSize="28dp"
                            android:textStyle="bold"
                            />
                        <ImageView
                            android:visibility="gone"
                            android:padding="15dp"
                            android:layout_width="75dp"
                            android:layout_height="70dp"
                            android:src="@drawable/night"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="-35dp"
                    android:backgroundTint="@color/primary"
                    android:layout_height="60dp"
                    app:cardCornerRadius="50dp">
                    <ImageView
                        android:padding="8dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_round_star_24"/>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:background="@drawable/background_element_type4"
                    android:layout_width="match_parent"
                    android:paddingTop="50dp"
                    android:orientation="vertical"
                    android:paddingHorizontal="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/text_title"
                        android:layout_marginLeft="15dp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:textSize="22dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="You Have a visit from Morocco"/>
                    <TextView
                        android:id="@+id/text_descript"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/text_secondry"
                        android:alpha="0.8"
                        android:layout_marginTop="10dp"
                        android:textSize="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="25dp"
                        android:text="Someone from Nador city, from the region of Oriental visited your website at 10/10/2022 14:23PM, from a linux system with chrome browser "/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>