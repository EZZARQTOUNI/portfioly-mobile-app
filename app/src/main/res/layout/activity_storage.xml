<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_secondry"
    tools:context=".Activity.StorageActivity">
    <LinearLayout android:layout_width="match_parent" android:gravity="center_vertical" android:paddingTop="15dp" android:paddingBottom="5dp"
        android:layout_height="85dp" android:orientation="horizontal" android:background="@drawable/background_element_type1">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/go_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:backgroundTint="@color/background_secondry"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:shadowColor="@color/background_primary"
            app:cornerRadius="5dp"
            app:icon="@drawable/left__back_icon"
            app:iconGravity="textStart"
            app:iconSize="38dp"
            app:iconPadding="0dp"
            app:iconTint="@color/text_primary" />
        <TextView
            android:textAllCaps="true"
            android:id="@+id/title_page"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Storage"
            android:textColor="@color/text_primary"
            android:textSize="20dp"
            android:textStyle="bold"
            android:padding="2dp" />
        <ImageView android:layout_width="40dp" android:layout_height="40dp" android:layout_marginRight="10dp" />
    </LinearLayout>
    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:paddingHorizontal="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:layout_margin="15dp"
                app:cardCornerRadius="8dp"
                android:background="@drawable/sub1"
                android:layout_width="match_parent"
                android:layout_height="390dp"
                android:minHeight="390dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:paddingTop="30dp"
                    android:paddingHorizontal="25dp"
                    android:paddingBottom="10dp"
                    android:background="@drawable/sub2"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginBottom="15dp"
                        android:text="Available Storage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="23dp"
                        android:textColor="#fff"
                        android:textStyle="bold"/>
                    <com.github.lzyzsd.circleprogress.ArcProgress
                        android:id="@+id/percent_view"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        app:arc_progress="55"

                        android:layout_marginTop="15dp"
                        app:arc_finished_color="#fff"
                        app:arc_text_color="#fff"
                        app:arc_stroke_width="15dp"
                        app:arc_unfinished_color="#b0cfff"
                        app:arc_text_size="45dp"
                        app:arc_suffix_text_size="22dp"
                        app:arc_bottom_text_size="15dp"
                        app:arc_suffix_text="%"
                        app:arc_bottom_text="STORAGE"/>
                    <LinearLayout
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="13dp"
                                    android:layout_height="13dp"
                                    android:src="@drawable/ic_baseline_circle_24"/>
                                <TextView
                                    android:layout_marginLeft="5dp"
                                    android:text="TOTAL"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="18dp"
                                    android:textColor="#fff"
                                    android:textStyle="bold"/>
                            </LinearLayout>
                            <TextView
                                android:id="@+id/total"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="6dp"
                                android:text="5 GB"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18dp"
                                android:textColor="#fff"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="13dp"
                                    android:layout_height="13dp"
                                    android:src="@drawable/ic_baseline_circle_24"/>
                                <TextView
                                    android:layout_marginLeft="5dp"
                                    android:text="USED"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="18dp"
                                    android:textColor="#fff"
                                    android:textStyle="bold"/>
                            </LinearLayout>
                            <TextView
                                android:id="@+id/used"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="6dp"
                                android:text="0.1 GB"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18dp"
                                android:textColor="#fff"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/ask_more"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginBottom="15dp"
                app:icon="@drawable/login_mail_page"
                app:iconTint="@color/primary"
                app:iconSize="35dp"
                app:cornerRadius="8dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Ask for more storage"
                android:textColor="@color/text_primary"
                android:backgroundTint="@color/background_primary"
                android:layout_height="75dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
